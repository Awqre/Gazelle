<div class="box box_info box_userinfo_donor_stats">
    <div class="head colhead_dark">Donation Statistics</div>
    <ul class="stats nobullet">
{% if not donor.isDonor %}
{%   if viewer.id == donor.id %}
        <li>You haven't donated.</li>
{%   else %}
        <li>This user hasn't donated.</li>
{%   endif %}
{% else %}
{%   if viewer.permitted('users_mod') or viewer.id == donor.id %}
        <li>Total donor points: {{ donor.totalRank }}</li>
{%   endif %}
        <li>Current donor rank: {{ donor.rankLabel(true)|raw }}</li>
        <li>Leaderboard position: {{ donor.leaderboardRank }}</li>
        <li>Last donated: {{ donor.lastDonationDate|time_diff }}</li>
        <li>Rank expires: {{ donor.rankExpiry|raw }}</li>
{% endif %}
    </ul>
</div>
