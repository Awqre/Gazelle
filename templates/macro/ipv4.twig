{%- macro asn(name, n) -%}
    {% if n %}{{n}} / {{ name }}{% else %}{{ name }}{% endif %}
{%- endmacro -%}

{%- macro ip_search(ip) -%}
    <a href="tools.php?action=ip_search&amp;ip={{ ip }}">{{ ip }}</a> <a href="https://whatismyipaddress.com/ip/{{ ip }}" class="brackets tooltip" title="What is my IP address?">WI</a>
{%- endmacro -%}
