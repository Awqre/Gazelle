<div class="box">
    <div class="head">
        <strong>Statistics</strong>
    </div>
    <ul class="nobullet">
{%- if featured -%}
    <li>
    {%- if featured.dateEnd is not empty -%}
        {%- set date = featured.dateEnd|date('F Y') -%}
    This was {{ date|article }} {{ date }} {{ featured.type.label }}</li>
    {%- else -%}
    This is {{ featured.type.label|article }} {{ featured.type.label }}
    <br />
    <br /></li>
    {%- endif -%}
{%- endif -%}
    <li>Downloads: {{ stats.downloadTotal }}</li>
    <li>Leechers: {{ stats.leechTotal }}</li>
    <li>Snatches: {{ stats.snatchTotal }}</li>
    <li>Seeders: {{ stats.seedingTotal }}</li>
    <li>Bookmarked by {{ stats.bookmarkTotal }} user{{ stats.bookmarkTotal|plural }}</li>
    </ul>
</div>
